@model IEnumerable<LeilaoWeb.Models.Offer>

@{
    ViewData["Title"] = "Simple Search";
}

<h1>@ViewData["Title"]</h1>

<hr />
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">

                <div class="form-group">
                    <label for="minDate">Name</label>
                    <input type="text" class="form-control" name="Name" value="@ViewData["name"]" />
                </div>

            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total items = @Model.Count()</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-primary">                    
                    <th>
                        @Html.DisplayNameFor(model => model.People.Name)
                    </th>                   
                    <th>
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Value)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>                        
                        <th>
                            @Html.DisplayFor(modelItem => item.People.Name)
                        </th>                       
                        <th>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Value)
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>